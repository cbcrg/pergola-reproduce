manifest {
    mainScript = 'melanogaster_GAL4-Pergola-Reproduce.nf'
}

params { 
  output = "results/"
} 

process {
    publishDir = [path: {params.output}, mode: 'copy', overwrite: 'true']
    container = 'joseespinosa/pergola@sha256:ba95f7219b53180c255114636f4e86ae5a2408754d2c9aa194451f60db1874b9'
}

profiles {
    crg {
		process {
  			executor = 'crg'
  			queue = 'cn-el7'
  			memory='16G'
            cpus='12'
			scratch = true
		}
		docker.enabled = true
  	}
}
